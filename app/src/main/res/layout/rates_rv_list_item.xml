<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/primaryLightColor"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rates_rv_list_item_tv_difference"
            android:layout_alignParentEnd="true"
            style="@style/TextStyle"
            tools:text="difference"/>

        <TextView
            android:id="@+id/rates_rv_list_item_tv_nominal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            style="@style/TextStyle"
            tools:text="nominal"/>

        <TextView
            android:id="@+id/rates_rv_list_item_tv_charCode"
            android:layout_alignParentStart="true"
            style="@style/TextStyle"
            tools:text="charCode"/>

        <TextView
            android:id="@+id/rates_rv_list_item_tv_name"
            android:layout_below="@+id/rates_rv_list_item_tv_charCode"
            style="@style/TextStyle"
            android:textStyle="italic"
            tools:text="name"/>

        <TextView
            android:id="@+id/rates_rv_list_item_tv_value"
            android:layout_below="@+id/rates_rv_list_item_tv_name"
            style="@style/TextStyle"
            android:textStyle="bold"
            tools:text="value"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

